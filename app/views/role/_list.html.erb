<% obj.each do |role| %>
    <div class="row justify-content-center">
        <div class="col-sm-10">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h2 class="role-title">
                        <a href="#"><%= role.title %></a>
                    </h2>
                  <p><%= role.description %></p>
                </div>
                <div class="panel-footer">
                    <p><em>Last updated <%= time_ago_in_words(role.updated_at) %> ago by [User]</em></p>
                    <p class="role-tags">
                        <!-- Active / Inactive tags -->
                        <% if role.active %>
                            Active
                        <% else %>
                            Inactive
                        <% end %>
                        &nbsp;
                        <!-- Default tags -->
                        <% if role.default %>
                            Default
                        <% end %>
                    </p>
                </div>
            </div>
        </div>
    </div>
<% end %>