<% obj.each do |role| %>
    <div class="row">
        <div class="col-sm-9 col-sm-offset-2">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-10">
                            <h2 class="role-title"><%= role.title %></h2>
                        </div>
                        <div class="col-sm-2">
                            <a href="#" class="btn btn-default"><%= "User".pluralize(role.user.count) %> <span class="badge"><%= role.user.count %></span></a>
                        </div>
                    </div>
                        
                    <p><%= role.description %></p>
                    <p>
                        Permission to create: <em><%= role.permission_create.titleize %></em><br/>
                        Permission to view: <em><%= role.permission_view.titleize %></em><br/>
                        Permission to update: <em><%= role.permission_update.titleize %></em><br/>
                        Permission to delete: <em><%= role.permission_delete.titleize %></em><br/>
                        Permission to send notifications: <em><%= role.permission_send_notifications.titleize %></em><br/>
                    </p>
                    <hr/>
                    <p>
                        <%= link_to "Edit", edit_role_path(role), class: "btn btn-primary btn-sm" if current_user.role.permission_update == "admin" %>
                        &nbsp;
                        <%= link_to "Delete", role_path(role),  method: :delete, data: {confirm: "Are you sure you want to delete this role?"}, class: "btn btn-danger btn-sm" if current_user.role.permission_delete == "admin" %>
                    </p>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-xs-8">
                            <p><em>Last updated <%= time_ago_in_words(role.updated_at) %> ago by <%= role.updated_by %></em></p>
                        </div>
                        <div class="col-xs-4"><span class="pull-right">
                            <!-- Default tags -->
                            <% if role.default %>
                                <style class="label label-default">Default</style>
                            <% end %>
                            &nbsp;
                            <!-- Active / Inactive tags -->
                            <% if role.active %>
                                <style class="label label-success">Active</style>
                            <% else %>
                                <style class="label label-danger">Inactive</style>
                            <% end %>
                        </span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% end %>