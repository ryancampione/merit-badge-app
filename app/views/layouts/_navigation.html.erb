<div class="navbar navbar-inverse navbar-static-top">
  <div class="container">
    <%= link_to "Merit Badge App", root_path, id: 'logo' %>
    
    <% if current_user %>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      
      <div class="navbar-collapse collapse navbar-responsive-collapse">
        <ul class="nav navbar-nav col-md-3">
            <li><%= link_to "Merit Badges", merit_badges_path  %></li>
            <li><%= link_to "Counselors", "#"  %></li>
        </ul>
        <ul class="nav navbar-right col-md-5">
          <li class="col-md-5">
            <%= link_to(truncate(current_user.email, length: 25).html_safe, edit_user_registration_path) %>
          </li>
          <% if current_user.role.permission_view == 'admin' %>
            <li class="col-md-3">
              <%= link_to("admin", admin_path, class: "btn btn-xs btn-danger") %>
            </li>
          <% end %>
          <li class="col-md-3 logout">
            <%= link_to("logout", destroy_user_session_path, class: "btn btn-xs btn-danger", method: :delete) %>
          </li>
        </ul>
      </div>
    <% else %>
      <div class="nav navbar-right col-md-8">
        <ul>
          <li class="col-md-5">
            <%= link_to('Login', new_user_session_path, class: 'btn btn-primary', title: 'Login') %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</div>