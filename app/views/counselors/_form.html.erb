<!-- notify the user of any errors -->
<%= render 'shared/errors', obj: @counselor %>

<!-- role form -->
<div class="col-xs-10 col-xs-offset-1">
    <%= form_with(model: @counselor, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        
      <div class="form-group row">
        <div class="control-label col-sm-2">
          <%= f.label :name, "Full Name" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", autofocus: true %>
        </div>
      </div>
      
      <div class="form-group row">
          <div class="control-label col-sm-2">
              <%= f.label :email %>
          </div>
          <div class="col-sm-8">
              <%= f.email_field :email, class: "form-control" %>
          </div>
      </div>
      
      <div class="form-group row">
        <div class="control-label col-sm-2">
          <%= f.label :phone, "Phone Number" %>
        </div>
        <div class="col-sm-8">
          <%= f.telephone_field :phone, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group row">
        <div class="control-label col-sm-2">
          <%= f.label :unit_number, "Unit Number" %>
        </div>
        <div class="col-sm-2">
          <%= f.text_field :unit_number, class: "form-control" %>
        </div>
      </div>
      
      
      <div class="form-group row">
        <div class="control-label col-sm-4">
          <%= f.label :ypt, "Youth Protection Training" %>
        </div>
        <div class="col-sm-3">
          <%= f.date_field :ypt, class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group row">
        <div class="control-label col-sm-4">
          <%= f.label :help_others, "Willing to help Scouts from other units?" %>
        </div>
        <div class="col-sm-6">
          <%= f.check_box :help_others, :data => { 
            :toggle => "toggle",
            :on => "Yes",
            :onstyle => "primary",
            :off => "No",
            :offstyle => "default" 
          } %>
        </div>
      </div>
      
      <br />
      <div class="form-group row">
        <div class="col-md-4 col-md-offset-8">
          <%= f.submit class: "btn btn-primary btn-md" %>
          <%= link_to "Cancel", :back, class: "btn btn-default btn-md" %>
        </div>
      </div>
      
    <% end %>
</div>