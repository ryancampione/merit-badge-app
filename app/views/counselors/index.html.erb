<h1 align="center">Merit Badge Counselors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Unit number</th>
      <th>Help others</th>
      <th>Ypt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @counselors.each do |counselor| %>
      <tr>
        <td><%= counselor.name %></td>
        <td><%= counselor.email %></td>
        <td><%= counselor.phone %></td>
        <td><%= counselor.unit_number %></td>
        <td><%= counselor.help_others %></td>
        <td><%= counselor.ypt %></td>
        <td><%= link_to 'Show', counselor %></td>
        <td><%= link_to 'Edit', edit_counselor_path(counselor) %></td>
        <td><%= link_to 'Destroy', counselor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
