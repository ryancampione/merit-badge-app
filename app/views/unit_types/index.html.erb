<h1>Unit Types</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Active</th>
      <th>Order</th>
      <th>Updated by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unit_types.each do |unit_type| %>
      <tr>
        <td><%= unit_type.value %></td>
        <td><%= unit_type.active %></td>
        <td><%= unit_type.order %></td>
        <td><%= unit_type.updated_by %></td>
        <td><%= link_to 'Show', unit_type %></td>
        <td><%= link_to 'Edit', edit_unit_type_path(unit_type) %></td>
        <td><%= link_to 'Destroy', unit_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

